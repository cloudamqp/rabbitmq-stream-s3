{mapping, "s3.region", "rabbitmq_stream_s3.aws_region", [
    {datatype, string}
]}.

{translation, "rabbitmq_stream_s3.aws_region",
fun(Conf) ->
    case cuttlefish:conf_get("s3.region", Conf, undefined) of
        undefined -> cuttlefish:unset();
        Value     -> Value
    end
end}.

